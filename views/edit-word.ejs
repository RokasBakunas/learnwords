<!-- views/edit-word.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Word</title>
    <link href="/output.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <div class="container mx-auto pt-8">
        <h1 class="text-2xl font-bold text-center mb-6">Edit Word</h1>
        <form action="/edit/<%= word._id %>" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="germanWord">German Word</label>
                <input type="text" name="germanWord" value="<%= word.germanWord %>" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="pronunciation">Pronunciation</label>
                <input type="text" name="pronunciation" value="<%= word.pronunciation %>" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="lithuanianWord">Lithuanian Word</label>
                <input type="text" name="lithuanianWord" value="<%= word.lithuanianWord %>" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            </div>
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Save Changes
            </button>
        </form>
    </div>
    <script src="https://cdn.tailwindcss.com"></script>
</body>
</html>
